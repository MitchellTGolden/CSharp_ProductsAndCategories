@model Association
<h1 class="text-center">@ViewBag.SP.ProductName</h1>

<div class="d-flex justify-content-between">
    <div>
        @foreach(Association c in ViewBag.SP.Categories)
        {
            <a href="/category/@c.Category.CategoryId">@c.Category.CategoryName</a>
            <br>
        }
    </div>
    <div class="col-4">
        <form asp-action="AddCat" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="CategoryId"></span>
                <label  asp-for="CategoryId"></label>
                <select class="form-control" asp-for="CategoryId">
                    @foreach(var c in ViewBag.Categories)
                    {
                    <option value=@c.CategoryId>@c.CategoryName</option>
                    }
                </select>
                <input type="hidden" asp-for="ProductId" value=@ViewBag.SP.ProductId/>
            </div>
            <input class="btn btn-primary" value="Add Category" type="submit">
        </form>
    </div>
</div>
