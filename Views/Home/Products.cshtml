@model Product;
<div class="d-flex mx-auto justify-content-between">
    <div class="col-4">
        <h3>Create a Product</h3>

        <form asp-action="CreateProduct" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="ProductName"></span>
                <label  asp-for="ProductName"></label>
                <input class="form-control" asp-for="ProductName">
            </div>
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description">
            </div>
            <div class="form-group">
                <span asp-validation-for="Price"></span>
                <label asp-for="Price"></label>
                <input class="form-control" asp-for="Price">
            </div>
            <input class="btn btn-primary" value="Create" type="submit">
        </form>
    </div>
    <div class="col-4 text-center">
        <h3>Current Products</h3>
        @foreach (var p in ViewBag.Products)
        {
            <a class="mx-auto" href="product/@p.ProductId">@p.ProductName</a>
            <br>
        }
    </div>
</div>